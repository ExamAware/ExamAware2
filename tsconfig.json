{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "NodeNext",
    "skipLibCheck": true,
    "moduleResolution": "NodeNext",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@dsz-examaware/player-core": [
        "./packages/player-core/src"
      ],
      "@dsz-examaware/player-core/*": [
        "./packages/player-core/src/*"
      ]
    }
  },
  "references": [
    {
      "path": "./packages/core"
    },
    {
      "path": "./packages/web"
    },
    {
      "path": "./packages/desktop"
    },
    {
      "path": "./packages/player"
    },
    {
      "path": "./packages/plugin-sdk"
    }
  ],
  "include": [
    "docs/.vuepress/**/*.ts",
    "docs/.vuepress/**/*.vue"
  ]
}

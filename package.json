{
  "name": "examaware-workspace",
  "private": true,
  "description": "ExamAware 知试",
  "scripts": {
    "dev:prebuild": "pnpm core:build && pnpm player:build",
    "dev:watch": "pnpm -r --parallel --filter @examaware/core --filter @examaware/player dev",
    "dev": "pnpm run dev:prebuild && pnpm -r --parallel --filter @examaware/core --filter @examaware/player --filter @examaware/desktop dev",
    "desktop:dev": "pnpm --filter @examaware/desktop dev",
    "build": "pnpm --filter @examaware/desktop build",
    "preview": "pnpm --filter @examaware/desktop preview",
    "core:build": "pnpm --filter @examaware/core build",
    "core:dev": "pnpm --filter @examaware/core dev",
    "player:build": "pnpm --filter @examaware/player build",
    "player:dev": "pnpm --filter @examaware/player dev",
    "web:build": "pnpm --filter @examaware/web build",
    "web:dev": "pnpm --filter @examaware/web dev",
    "desktop:build:win": "pnpm --filter @examaware/desktop build:win",
    "desktop:build:mac": "pnpm --filter @examaware/desktop build:mac",
    "desktop:build:linux": "pnpm --filter @examaware/desktop build:linux",
    "desktop:build:linux:appimage": "pnpm --filter @examaware/desktop build:linux:appimage",
    "desktop:build:linux:snap": "pnpm --filter @examaware/desktop build:linux:snap",
    "desktop:build:linux:deb": "pnpm --filter @examaware/desktop build:linux:deb",
    "desktop:build:all": "pnpm --filter @examaware/desktop build:all",
    "desktop:dist": "pnpm --filter @examaware/desktop dist",
    "lint": "pnpm -r lint",
    "clean": "pnpm -r clean"
  },
  "devDependencies": {
    "@types/node": "^22.17.2",
    "typescript": "~5.7.3",
    "prettier": "^3.6.2",
    "eslint": "^9.33.0"
  },
  "packageManager": "pnpm@10.15.0",
  "author": "hello8693 <hello8693@hello8693.xyz>",
  "license": "MIT"
}

{
  "name": "examaware-workspace",
  "private": true,
  "description": "ExamAware 知试",
  "scripts": {
    "dev:prebuild": "pnpm core:build && pnpm player:build",
    "dev:watch": "pnpm -r --parallel --filter @dsz-examaware/core --filter @dsz-examaware/player dev",
    "dev": "pnpm --filter @dsz-examaware/desktop dev",
    "desktop:dev": "pnpm --filter @dsz-examaware/desktop dev",
    "build": "pnpm --filter @dsz-examaware/desktop build",
    "preview": "pnpm --filter @dsz-examaware/desktop preview",
    "core:build": "pnpm --filter @dsz-examaware/core build",
    "core:dev": "pnpm --filter @dsz-examaware/core dev",
    "player:build": "pnpm --filter @dsz-examaware/player build",
    "player:dev": "pnpm --filter @dsz-examaware/player dev",
    "web:build": "pnpm --filter @dsz-examaware/web build",
    "web:dev": "pnpm --filter @dsz-examaware/web dev",
    "desktop:build:win": "pnpm --filter @dsz-examaware/desktop build:win",
    "desktop:build:mac": "pnpm --filter @dsz-examaware/desktop build:mac",
    "desktop:build:linux": "pnpm --filter @dsz-examaware/desktop build:linux",
    "desktop:build:linux:appimage": "pnpm --filter @dsz-examaware/desktop build:linux:appimage",
    "desktop:build:linux:snap": "pnpm --filter @dsz-examaware/desktop build:linux:snap",
    "desktop:build:linux:deb": "pnpm --filter @dsz-examaware/desktop build:linux:deb",
    "desktop:build:all": "pnpm --filter @dsz-examaware/desktop build:all",
    "desktop:dist": "pnpm --filter @dsz-examaware/desktop dist",
    "lint": "pnpm -r lint",
    "clean": "pnpm -r clean",
    "format": "prettier --write .",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/node": "^22.18.10",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "eslint": "^9.37.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "prettier": "^3.6.2",
    "typescript": "~5.7.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,vue,json,yaml,yml,md,css,scss,less,html,mcconfig}": "prettier --write"
  },
  "packageManager": "pnpm@10.18.2",
  "author": "hello8693 <hello8693@hello8693.xyz>",
  "license": "GPL-3.0-only"
}

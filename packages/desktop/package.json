{
  "name": "@examaware/desktop",
  "version": "1.0.0",
  "description": "ExamAware Desktop",
  "author": "ExamAware Team <team@examaware.cn>",
  "main": "./dist/main/index.js",
  "type": "module",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build --mode production",
    "preview": "electron-vite preview",
    "build:win": "pnpm build && electron-builder --win --publish=never",
    "build:mac": "pnpm build && electron-builder --mac --publish=never",
    "build:linux": "pnpm build && electron-builder --linux --publish=never",
    "build:all": "pnpm build && electron-builder --win --mac --linux --publish=never",
    "dist": "pnpm build && electron-builder --publish=never",
    "type-check": "vue-tsc --noEmit",
    "lint": "eslint src --ext .ts,.vue --fix",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@examaware/core": "workspace:*",
    "@examaware/player": "workspace:*",

    "@vue/tsconfig": "^0.7.0",
    "electron": "^31.7.7",
    "electron-builder": "^24.13.3",
    "electron-vite": "^4.0.0",
    "eslint": "^9.33.0",
    "eslint-plugin-oxlint": "^0.15.15",
    "eslint-plugin-vue": "^9.33.0",
    "jiti": "^2.5.1",
    "misans": "^4.1.0",
    "moment": "^2.30.1",
    "npm-run-all2": "^7.0.2",

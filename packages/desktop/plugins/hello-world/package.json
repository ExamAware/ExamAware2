{
  "name": "@examaware/plugin-hello-world",
  "version": "0.1.0",
  "description": "ExamAware 示例插件，演示主进程插件生命周期与服务提供",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "vite --config vite.config.ts",
    "build": "vite build"
  },
  "examaware": {
    "displayName": "Hello World 插件",
    "description": "向日志输出问候语并提供 hello.message 服务",
    "targets": {
      "main": "./main.cjs",
      "renderer": "./dist/renderer/index.mjs"
    },
    "services": {
      "provide": [
        "hello.message"
      ],
      "inject": []
    },
    "settings": {
      "namespace": "plugin.helloWorld",
      "schema": "./schema.json"
    }
  },
  "dependencies": {
    "vue": "^3.5.19"
  },
  "devDependencies": {
    "typescript": "~5.7.3",
    "vite": "^6.3.5"
  }
}

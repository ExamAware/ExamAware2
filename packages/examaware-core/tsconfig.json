{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../core/dist",
    "rootDir": "../core/src",
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "node",
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "../core/src/**/*"
  ],
  "exclude": [
    "../core/node_modules",
    "../core/dist"
  ]
}

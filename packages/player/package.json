  },
  "peerDependencies": {
    "tdesign-vue-next": "^1.15.5",
    "vue": "^3.0.0"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@vitejs/plugin-vue": "^6.0.3",
    "eslint": "^9.39.2",
    "rimraf": "^6.1.2",
    "tdesign-vue-next": "^1.17.7",
    "typescript": "~5.9.3",
    "vite": "^7.3.0",

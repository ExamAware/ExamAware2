    "prepublishOnly": "pnpm run build",
    "dev": "vite build --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.vue",
    "clean": "rimraf dist"
  },
  "keywords": [
    "examaware",
    "exam",
    "player",
    "display",
    "vue"

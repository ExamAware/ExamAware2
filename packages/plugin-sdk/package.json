{
  "name": "@dsz-examaware/plugin-sdk",
  "version": "1.2.2",
  "description": "ExamAware plugin SDK",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./cli": "./bin/create-examaware-plugin.mjs"
  },
  "bin": {
    "create-examaware-plugin": "./bin/create-examaware-plugin.mjs",
    "pack-examaware-plugin": "./bin/pack-examaware-plugin.mjs"
  },
  "files": [
    "dist",
    "bin",
    "README.md"
  ],
  "scripts": {
    "build": "vite build && node ./scripts/build-types.mjs",
    "build:types": "node ./scripts/build-types.mjs",
    "dev": "vite build --watch --mode development",
    "lint": "eslint \"src/**/*.ts\"",
    "prepublishOnly": "node ../../scripts/sync-plugin-sdk-version.mjs && pnpm build"
  },
  "keywords": [
    "examaware",
    "plugin",
    "sdk",
    "di",
    "hostbuilder"
  ],
  "author": "ExamAware",
  "license": "GPL-3.0-only",
  "dependencies": {
    "archiver": "^7.0.1"
  },
  "devDependencies": {
    "typescript": "~5.9.3",
    "vite": "^7.3.0"
  }
}

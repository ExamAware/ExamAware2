{
  "compilerOptions": {
    "composite": true,
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "types": ["vite/client"],
    "baseUrl": ".",
    "ignoreDeprecations": "6.0",
    "paths": {
      "@dsz-examaware/core": ["../core/src/index.ts"],
      "@dsz-examaware/player": ["../player/src/index.ts"]
    }
  },
  "include": ["src", "../core/src/**/*", "../player/src/**/*"]
}
